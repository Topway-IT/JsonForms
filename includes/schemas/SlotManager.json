{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"options": {
		"layout": {
			"name": "tabs",
			"options": {
				"mainLabel": "main"
			}
		}
	},
	"definitions": {
		"slotOptions": {
			"type": "object",
			"required": ["content_model", "editor"],
			"defaultProperties": ["content_model", "editor", "content"],
			"options": {
				"layout": {
					"name": "booklet"
				}
			},
			"properties": {
				"role": {
					"type": "string",
					"format": "hidden"
				},
				"content_model": {
					"type": "string",
					"title": "Content model",
					"default": "wikitext",
					"watch": {
						"roleProperty": "role"
					},
					"enumSource": [
						{
							"source": "contentModelByRoleSource"
						}
					]
				},
				"editor": {
					"type": "string",
					"title": "Editor",
					"default": "source",
					"enum": ["source", "VisualEditor", "JSON Editor", "JsonForms"]
				},
				"content": {
					"type": "string",
					"format": "textarea",
					"options": {
						"compact": true
					}
				}
			}
		}
	},
	"allOf": [
		{
			"type": "object",
			"properties": {
				"title": {
					"type": "string",
					"minLength": 1,
					"title": "Title",
					"options": {
						"input": {
							"name": "title"
						}
					}
				}
			},
			"required": ["title"]
		},
		{
			"$ref": "#/definitions/slotOptions"
		},
		{
			"type": "object",
			"properties": {
				"categories": {
					"title": "Categories",
					"type": "array",
					"items": {
						"type": "string",
						"options": {
							"input": {
								"name": "categorymultiselect"
							}
						}
					}
				},
				"minor": {
					"type": "boolean",
					"title": "Minor edit",
					"description": "This is a <a target=\"_blank\" href=\"https://www.mediawiki.org/wiki/Help:Minor_edit\">minor edit</a>",
					"options": {
						"input": {
							"name": "checkbox"
						}
					}
				},
				"summary": {
					"type": "string",
					"title": "Edit summary"
				}
			}
		}
	],
	"patternProperties": {
		"^[a-zA-Z0-9_-]+$": {
			"title": "Additional slot",
			"options": {
				"UISchema": {
					"title": "New slot",
					"type": "object",
					"required": ["name"],
					"properties": {
						"name": {
							"title": "slot name",
							"type": "string",
							"enumSource": [
								{
									"source": "slotRolesSource"
								}
							]
						}
					}
				}
			},
			"allOf": [
				{
					"$ref": "#/definitions/slotOptions"
				}
			]
		}
	}
}

